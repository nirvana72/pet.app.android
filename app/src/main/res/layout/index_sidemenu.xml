<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:paddingTop="100dp"
              android:background="#ffffff"
              android:layout_width="200dp"
              android:layout_height="match_parent">

    <com.rishabhharit.roundedimageview.RoundedImageView
            android:id="@+id/ivAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:cornerRadius="120dp"
    />

    <TextView
        android:id="@+id/tvNickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:text="昵称"
        />

    <TextView
            android:id="@+id/tvRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ff0000"
            android:textSize="12sp"
            android:text="role"/>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:tint="#757575"
                android:src="@drawable/icon_account_circle"
                android:layout_marginStart="20dp"
                android:contentDescription="@null"/>

        <TextView
                android:id="@+id/menu_account"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="个人中心"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="20dp"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:tint="#757575"
                android:src="@drawable/icon_textsms"
                android:layout_marginStart="20dp"
                android:contentDescription="@null"/>

        <TextView
                android:id="@+id/menu_message"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:text="消息"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"/>
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:tint="#757575"
                android:src="@drawable/icon_star"
                android:layout_marginStart="20dp"
                android:contentDescription="@null"/>

        <TextView
                android:id="@+id/menu_aboutus"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:text="关于我们"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:layout_marginStart="20dp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_review"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:tint="#757575"
                android:src="@drawable/icon_playlist_add"
                android:layout_marginStart="20dp"
                android:contentDescription="@null"/>

        <TextView
                android:id="@+id/menu_review"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="文章审核"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="20dp"/>
    </LinearLayout>


    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#e2e2e2" android:layout_marginHorizontal="20dp" android:layout_marginTop="20dp"/>

    <LinearLayout
            android:id="@+id/layout_login"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:tint="#757575"
                android:src="@drawable/icon_power_settings"
                android:layout_marginStart="20dp"
                android:contentDescription="@null"/>

        <TextView
                android:id="@+id/menu_login"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="登录"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="20dp"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/layout_logout"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

        <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:tint="#757575"
                android:src="@drawable/icon_power_settings"
                android:layout_marginStart="20dp"
                android:contentDescription="@null"/>

        <TextView
                android:id="@+id/menu_logout"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="退出"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="20dp"/>
    </LinearLayout>

</LinearLayout>